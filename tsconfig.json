{
  "compilerOptions": {
    "target": "es2016",
    "lib": [ "es2016" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ]
}
  